{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "pretty": true,
    "noEmit": true,
    "jsx": "react"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "typings"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
      "babelrc": false,
      "presets": [
        ["env", { "targets": "last 2 versions, ie 11", "modules": false }]
      ]
    }
  }
}